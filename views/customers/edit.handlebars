<div class="row">
    <h1>Edit Customer: {{name}}</h1>
</div>

<form role="form" method="post" action="/customers/edit/{{id}}">
<input type="hidden" name="_csrf" value="{{csrf}}">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone" value="{{phone}}">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>